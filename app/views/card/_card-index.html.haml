.step5-block
  .step5-block-up
    %b 支払い方法
  .step5-block-main
    .step5-block-main-submain
      .step5-block-main-submain-titlebox
        .step5-block-main-submain-titlebox-titles
          カード番号
        .step5-block-main-submain-titlebox-required
          必須
          = text_field_tag "number", "", class: "step5-block-main-submain-text-number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          .step5-block-main-submain-titlebox-icon-box
            = image_tag "credit/Visa.png", class:"step5-block-main-submain-titlebox-icon"
            = image_tag "credit/Mastercard.png", class:"step5-block-main-submain-titlebox-icon"
            = image_tag "credit/JCB.png", class:"step5-block-main-submain-titlebox-icon"
            = image_tag "credit/American-Express.png", class:"step5-block-main-submain-titlebox-icon"
            = image_tag "credit/Diners-Club.png", class:"step5-block-main-submain-titlebox-icon"
            = image_tag "credit/Discover-Network.png", class:"step5-block-main-submain-titlebox-icon"
      .step5-block-main-submain-titlebox
        .step5-block-main-submain-titlebox-limit
          有効期限
        .step5-block-main-submain-titlebox-required
          必須
          .step5-block-main-submain-limit
            %select#exp_month{name: "exp_month", type: "text",class:"step5-block-main-submain-limit-box"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            .step5-block-main-submain-limit__text 
              月/
          .step5-block-main-submain-limit
            %select#exp_year{name: "exp_year", type: "text",class:"step5-block-main-submain-limit-box"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            .step5-block-main-submain-limit__text
              年
      .step5-block-main-submain-titlebox
        .step5-block-main-submain-titlebox-titles
          セキュリティコード
        .step5-block-main-submain-titlebox-required
          必須
          = text_field_tag "cvc", "", class: "step5-block-main-submain-text-cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc" 
          .form-question
          = link_to profile_users_path, class:"form-question" do 
            カードの裏面の番号とは？
          #card_token
          = submit_tag "追加する", id: "token_submit", class:"step4-block-main-submain-address"