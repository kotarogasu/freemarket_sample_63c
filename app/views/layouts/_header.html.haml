%header
  .header-inner
    .header-inner__upper
      .site-logo
        =link_to root_path() do
          =image_tag "mypage/fmarket_logo_red.svg"
      .search-form
        %input.search-form__input{type: "text", size: "20", name: "keyword", placeholder: "何かお探しですか？"}
        %button.search-form__btn
          %i.fas.fa-search
    .header-inner__lower
      .header-inner__lower__left
        .search-list
          =link_to "#" do
            =image_tag "top_page/a-1.png"
            .search-list-text
              カテゴリーから探す
          .droplist
            %ul
              %li
                =link_to "#" do
                  レディース
              %li
                =link_to "#" do
                  メンズ
              %li
                =link_to "#" do
                  ベビー・キッズ
              %li
                =link_to "#" do
                  インテリア・住まい・小物
              %li
                =link_to "#" do
                  本・音楽・ゲーム
              %li
                =link_to "#" do
                  おもちや・ホビー・グッズ
              %li
                =link_to "#" do
                  コスメ・香水・美容
              %li
                =link_to "#" do
                  家電・スマホ・カメラ
              %li
                =link_to "#" do
                  スポーツ・レジャー
                       
        .search-list
          =link_to "#" do
            =image_tag "top_page/a-2.png"
            .search-list-text
              ブランドから探す
          .droplist
            %ul.second
              %li
                =link_to "#" do
                  シャネル
              %li
                =link_to "#" do
                  ナイキ
              %li
                =link_to "#" do
                  ルイヴィトン
              %li
                =link_to "#" do
                  スプリーム
              %li
                =link_to "#" do
                  アディダス
              %li
                =link_to "#" do
                  ブランド一覧  
                                  
      .header-inner__lower__right
        - if user_signed_in?
          %ul.mypage-menu
            %li.mypage-menu__list
              =link_to "" do
                %i.far.fa-heart
                いいね！一覧
            %li.mypage-menu__list
              =link_to "" do
                %i.far.fa-bell
                お知らせ
            %li.mypage-menu__list
              =link_to "" do
                %i.fas.fa-check
                やることリスト
            %li.mypage-menu__list
              = image_tag "mypage/user-icon.png" 
              = link_to "マイページ", mypage_users_path
              
        - else
          .login-btns
            =link_to "新規会員登録", social_choice_signup_index_path, class: 'login-btns__btn login-btns__btn--signup' 
            =link_to "ログイン", new_user_session_path, class: 'login-btns__btn login-btns__btn--login' 
  